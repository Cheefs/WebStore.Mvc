@model IEnumerable<EmployeViewModel>;

@{
    ViewBag.Title = $"Employess List";
}
<a asp-action="Edit" class="btn btn-success">Add New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>LastName</th>
            <th>FirstName</th>
            <th>Patronymic</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var el in Model)
        {
            <tr>
                <td>@el.LastName</td>
                <td>@el.FirstName</td>
                <td>@el.Patronymic</td>

                <td>@el.Age</td>
                <td>
                    <a asp-action="View" asp-route-id="@el.Id">View</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@el.Id">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@el.Id">
                        <i class="fa fa-cut"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>